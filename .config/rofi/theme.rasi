* {
    font:                        "JetBrains Mono Nerd Font 10";
    font-small:                        "JetBrains Mono Nerd Font 6";

    background:                  #0f0f0f;
    background-alt:              #2f2f2f;

    foreground:                  #FFFFFF;
    selected: #FF0000;
    active: #00FF00;
    urgent: #0000FF;
}


window {
    transparency: "real";
    border-radius: 8px;

    width: 1000px;
    enabled: true;
    cursor: "default";

    background-color: @background;
}

mainbox {
    enabled: true;

    background-color: transparent;
    orientation: horizontal;

    children: [ "textbox", "listbox" ];
}

