element-text {
    background-color: transparent;
    cursor:           inherit;
    highlight:        inherit;
    text-color:       inherit;
}

element-icon {
    background-color: transparent;
    size:             1.0000em ;
    cursor:           inherit;
    text-color:       inherit;
}

listview {
    padding:      8px 0px 0px ;
    scrollbar:    true;
    // border-color: var(separatorcolor);
    spacing:      2px ;
    fixed-height: 0;
    border:       2px dash 0px 0px ;
}

scrollbar {
    width:        4px ;
    padding:      0px 4px;
    handle-width: 8px ;
    border:       0;

    border-radius: 24px;

    // handle-color: var(normal-foreground);
}

